<%= form_with model: @user do |form| %>
    <%= form.label :username, "Your Username:" %><br>
    <%= form.text_field :username, value: "Lorem Ipsum" %><br><br>
    <%= form.label :password, "Desired Password:" %><br>
    <%= form.password_field :password %><br><br>
    <%= form.label :email, "Email Address:" %><br>
    <%= form.email_field :email, placeholder: "example@example.com" %><br><br>

    <%= form.submit %>
<% end %>