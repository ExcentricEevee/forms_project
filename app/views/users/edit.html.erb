<h2>Edit User</h2>

<% if @user.errors.any? %>
    <div id="error_explanation">
        <h3><%= pluralize(@user.errors.count, "error")%> prohibited this user from being updated:</h3>
        <ul>
            <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
        </ul>
    </div>
<% end %>

<%= form_with model: @user do |form| %>
    <div>
        <%= form.label :username, "Your Username:" %><br>
        <%= form.text_field :username, value: "Lorem Ipsum" %><br><br>
    </div>

    <div>
        <%= form.label :password, "Desired Password:" %><br>
        <%= form.password_field :password %><br><br>
    </div>

    <div>
        <%= form.label :email, "Email Address:" %><br>
        <%= form.email_field :email, placeholder: "example@example.com" %><br><br>
    </div>

    <div>
        <%= form.submit %>
    </div>
<% end %>